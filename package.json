{
  "name": "css-styleguid",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.css",
  "scripts": {
    "serve": "browser-sync start --server ./dist",
    "serve-watch": "browser-sync start --server ./dist --watch --files ./dist/",
    "build-clean": "rimraf ./dist",
    "build-compile-kss": "kss --config kss-config.json",
    "build-compile-sass": "node-sass ./main.scss ./dist/main.css",
    "build-compile-sass-watch": "node-sass --watch ./main.scss ./dist/main.css",
    "build-copy": "copyfiles assets/*.* dist",
    "build-lint": "sass-lint -v -c ./.sass-lint.yml",
    "build": "run-s build-clean build-compile-kss build-lint build-copy build-compile-sass",
    "watch": "run-p serve-watch build-compile-sass-watch"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.26.3",
    "copyfiles": "^2.1.0",
    "kss": "^3.0.0-beta.23",
    "michelangelo": "^0.8.0",
    "node-sass": "^4.10.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.2",
    "sass-lint": "^1.12.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.5.0",
    "normalize.css": "^8.0.1"
  }
}
